// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(uuid())
  name       String
  email      String     @unique
  password   String
  api_keys   ApiKey?
  resources  Resources?
  role       Role       @default(FREE)
  created_at DateTime   @default(now())

  @@map("users")
}

enum Role {
  MASTER
  FREE
  PREMIUM
}

model ApiKey {
  id              String   @id @default(uuid())
  key             String   @unique
  created_at      DateTime @default(now())
  expiration_date DateTime

  User    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id String @unique

  @@map("api_keys")
}

model Resources {
  id                  String              @id @default(uuid())
  offers              Offer[]
  created_at          DateTime            @default(now())
  resources_analytics ResourcesAnalytics?

  User    User?  @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id String @unique

  @@map("resources")
}

model Offer {
  id               String       @id @default(uuid())
  image            String
  title            String
  old_price        String?
  price            String
  destination_link String
  store_image      String
  expiration_date  String?
  created_at       DateTime     @default(now())
  offer_clicks     OfferClicks[]

  Resources    Resources @relation(fields: [resources_id], references: [id], onDelete: Cascade)
  resources_id String

  @@map("offers")
}

model ResourcesAnalytics {
  id           String        @id @default(uuid())
  offer_clicks OfferClicks[]

  resources    Resources @relation(fields: [resources_id], references: [id], onDelete: Cascade)
  resources_id String    @unique

  @@map("resources_analytics")
}

model OfferClicks {
  id          String   @id @default(uuid())
  resource_id String
  created_at  DateTime @default(now())

  resources_analytics    ResourcesAnalytics @relation(fields: [resources_analytics_id], references: [id], onDelete: Cascade)
  resources_analytics_id String

  offer    Offer  @relation(fields: [offer_id], references: [id], onDelete: Cascade)
  offer_id String 

  @@map("offer_clicks")
}
